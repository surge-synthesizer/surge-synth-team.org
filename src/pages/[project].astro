---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Base from "../layouts/Base.astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects");

    return projects.map((project) => ({
        params: { project: project.id },
        props: { project },
    }));
}

const { project } = Astro.props;
const url =
    (project.data.url ?? null) ? project.data.url : `https://github.com/${project.data.repo}`;
---

<Base title={`Surge Synth Team | ${project.data.title}`}>
    <article class="content-wrapper">
        <h1><a href={url}>{project.data.title}</a></h1>
        <Image
            class="product-image"
            src={project.data.cover}
            alt={project.data.title}
            quality="100"
            format="png"
        />
        <p>
            Categories: {project.data.categories.map((cat) => <>{cat + " "}</>)}
        </p>
        <p>{project.data.summary}</p>
    </article>
</Base>
