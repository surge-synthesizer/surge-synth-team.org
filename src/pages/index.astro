---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Default from "../layouts/Default.astro";
import Logo from "../images/logo.svg";

const projects = (await getCollection("projects")).sort(
    (a: any, b: any) => a.data.order - b.data.order,
);
---

<Default title="Surge Synth Team">
    <div class="grid gap-4">
        <header class="flex flex-col place-content-center place-items-center gap-4 md:flex-row">
            <Image class="self-center" alt="SST Logo" src={Logo} />
            <p
                class="prose max-w-lg text-justify text-sm text-pretty prose-neutral dark:prose-invert">
                The Surge Synth Team is a group of musicians, developers, testers, documenters, and
                general volunteer open source enthusiasts who randomly assembled to work on the
                Surge Synthesizer. As the Surge project became more successful, and we kept having
                fun, we decided to branch out into other things too!
            </p>
        </header>

        <div class="grid grid-cols-1 gap-6 p-2 md:grid-cols-2">
            {
                projects.map((project: any) => (
                    <div class="flex flex-col place-content-between gap-4 rounded-lg bg-bg-2-light p-4 shadow-lg dark:bg-bg-2">
                        <a class="link self-center text-xl font-semibold" href={project.data.url}>
                            {project.data.title}
                        </a>
                        <a href={project.data.url}>
                            <Image
                                class="m-0 rounded-lg shadow-xl shadow-neutral-400 dark:shadow-neutral-900"
                                alt={project.data.title}
                                src={project.data.cover}
                                quality="100"
                                format="png"
                            />
                        </a>
                        <article class="prose prose-neutral dark:prose-invert">
                            <p class="self-center text-center text-pretty">
                                {project.data.summary}
                            </p>
                        </article>
                    </div>
                ))
            }
        </div>
    </div>
</Default>
