---
import Default from "@layouts/default.astro";
import Card from "@components/card.astro";
import Link from "@components/link.astro";
import Header from "@components/header.astro";
---

<Default title="Surge Synth Team" {...Astro.props}>
    <Header page="index" />

    <div class="m-auto grid max-w-[600px] grid-flow-row gap-8 px-4 py-8">
        <Card
            title="Surge XT"
            text="Surge XT is an open source hybrid synthesizer, and the synth which started the Surge Synth Team project!"
            link="https://surge-synthesizer.github.io/"
            image="/screenshots/surge.png"
        />
        <Card
            title="Surge XT Effects"
            text="The Surge effects module in its own plugin."
            link="https://surge-synthesizer.github.io/"
            image="/screenshots/surge-effects.jpg"
        />
        <Card
            title="Surge XT for VCV Rack"
            text="Core elements of Surge XT synthesizer, available as modules for VCV Rack."
            link="#"
            image="/screenshots/surge-rack.jpg"
        />
        <Card
            title="Shortcircuit XT"
            text="Shortcircuit XT is a sampler/sample player."
            link="#"
            image="/screenshots/shortcircuit.jpg"
        />
        <Card
            title="Stochas"
            text="Stochas is a probabilistic polyrhythmic sequencer plugin."
            link="https://stochas.org/"
            image="/screenshots/stochas.jpg"
        />
        <Card
            title="B-Step Sequencer"
            text="The B-Step Sequencer is a midi generating plugin from Thomas Arndt which became open source in March 2022."
            link="#"
            image="/screenshots/bstep.jpg"
        />
        <Card
            title="Monique Monosynth"
            text="Monique is a monophonic synth from Thomas Arndt which became open source in December 2021."
            link="#"
            image="/screenshots/monique.jpg"
        />
        <Card
            title="Tuning Workbench Synth"
            text="Tuning Workbench Synth is a synthesizer for learning and experimenting with microtonal scales."
            link="#"
            image="/screenshots/tuning-workbench-synth.jpg"
        />
        <Card
            title="Tuning Library"
            text="We've added microtuning support to several instruments. Our core SCL/KBM calculation engine is available as a standalone C++ header."
            link="#"
            image="/screenshots/tuning-library.jpg"
        />
        <Card
            title="Tuning Note CLAPs"
            text="Microtuning devices for Bitwig Studio."
            link="#"
            image="/screenshots/tuning-claps.jpg"
        />
    </div>
</Default>
