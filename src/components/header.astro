---
const { page } = Astro.props;

let index;
page === "index" ? (index = true) : (index = false);

import Link from "@components/link.astro";
---

<div
    class="flex flex-col items-center justify-center gap-2 bg-[url('/images/darkened.png')] bg-center bg-no-repeat p-2 text-white">
    <div
        class="flex flex-row flex-wrap items-center justify-center text-center">
        {
            index ? (
                <h1 class="flex-1 self-center text-3xl font-black italic">
                    Surge Synth Team
                </h1>
            ) : (
                <h1 class="flex-1 self-center text-3xl font-black italic">
                    <Link link="/" text="Surge Synth Team" />
                </h1>
            )
        }
        <img
            class="max-h-[50px] min-w-[50px] flex-1 select-none"
            src="/images/small-logo.svg"
        />
    </div>
    <div class="flex flex-col">
        {
            index ? (
                <p class="p-2 text-center">
                    The Surge Synth Team is a group of musicians, developers,
                    testers, documenters, and general volunteer open source
                    enthusiasts who randomly assembled to work on the Surge
                    Synthesizer. As the Surge project became more successful,
                    and we kept having fun, we decided to branch out into other
                    things too!
                </p>
            ) : (
                ""
            )
        }
    </div>
    <div
        class="flex flex-wrap place-content-center gap-2 text-sm font-semibold">
        <Link text="Open Source" link="open-source" />
        <Link text="@GitHub" link="https://surge-synthesizer.github.io/" />
        <Link text="Reviews & Guides" link="reviews" />
        <Link text="Contact" link="#" />
    </div>
</div>
