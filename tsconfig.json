{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "$components/*": ["src/components/*"],
            "$content/*": ["src/content/*"],
            "$css/*": ["src/css/*"],
            "$images/*": ["src/images/*"],
            "$layouts/*": ["src/layouts/*"],
            "$pages/*": ["src/pages/*"],
            "$screenshots/*": ["src/screenshots/*"]
        },
        "plugins": [{ "name": "@astrojs/ts-plugin" }]
    }
}
